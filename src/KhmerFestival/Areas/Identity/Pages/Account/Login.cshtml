@page
@model LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h1 class="h4 fw-bold mb-1 text-primary">@ViewData["Title"]</h1>
                    <p class="text-muted mb-4">Đăng nhập để bình luận và tương tác với bài viết.</p>

                    <form id="account" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-2">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label" asp-for="Input.RememberMe"></label>
                            </div>
                            <a id="forgot-password" class="small" asp-page="./ForgotPassword">Quên mật khẩu?</a>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-primary w-100">
                            Đăng nhập
                        </button>

                        <div class="mt-3 small">
                            Chưa có tài khoản?
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng ký</a>
                        </div>

                        <div class="mt-2 small">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Gửi lại email xác nhận</a>
                        </div>
                    </form>

                    
                    <hr class="my-4" />
                    <section>
                        <h2 class="h6 fw-semibold mb-3">Đăng nhập bằng dịch vụ khác</h2>
                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div class="text-muted small">
                                    Chưa cấu hình dịch vụ đăng nhập ngoài.
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div class="d-grid gap-2">
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="btn btn-outline-secondary"
                                                    name="provider" value="@provider.Name"
                                                    title="Đăng nhập bằng @provider.DisplayName">
                                                @provider.DisplayName
                                            </button>
                                        }
                                    </div>
                                </form>
                            }
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
