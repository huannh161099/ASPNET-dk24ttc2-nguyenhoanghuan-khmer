@model IEnumerable<KhmerFestival.Models.Post>
@{
    ViewData["Title"] = "Quản lý bài viết";
    int page = (int)(ViewBag.Page ?? 1);
    int totalPages = (int)(ViewBag.TotalPages ?? 1);
    string keyword = (string)(ViewBag.Keyword ?? "");
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="fw-bold">Quản lý bài viết</h4>
    <a asp-area="Admin" asp-controller="Posts" asp-action="Create" class="btn btn-success">
         Thêm bài viết
    </a>
</div>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}

<form method="get" class="mb-3">
    <div class="input-group">
        <input name="keyword" value="@keyword" class="form-control" placeholder="Tìm theo tiêu đề, mô tả..." />
        <button class="btn btn-outline-primary">Tìm</button>
    </div>
</form>

<div class="card border-0 shadow-sm">
    <div class="card-body table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width:100px;">Ảnh</th>
                    <th>Tiêu đề</th>
                    <th>Slug</th>
                    <th>Ngày đăng</th>
                    <th>Trạng thái</th>
                    <th style="width:160px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(p.ImageUrl))
                            {
                                <img src="@p.ImageUrl" style="height:60px;object-fit:cover;border-radius:.5rem;" />
                            }
                        </td>
                        <td class="fw-semibold">@p.Title</td>
                        <td>@p.Slug</td>
                        <td>@(p.PublishedAt?.ToLocalTime().ToString("dd/MM/yyyy") ?? "-")</td>
                        <td>
                            @if (p.IsPublished)
                            {
                                <span class="badge bg-success">Đã xuất bản</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Nháp</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-area="Admin" asp-controller="Posts" asp-action="Edit" asp-route-id="@p.Id"
                               class="btn btn-sm btn-primary me-1">Sửa</a>
                            <form asp-area="Admin" asp-controller="Posts" asp-action="Delete" asp-route-id="@p.Id"
                                  method="post" class="d-inline" onsubmit="return confirm('Xoá bài này?');">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-danger">Xoá</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (totalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination">
            <li class="page-item @(page == 1 ? "disabled" : "")">
                <a class="page-link" asp-route-page="@(page - 1)" asp-route-keyword="@keyword">«</a>
            </li>
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == page ? "active" : "")">
                    <a class="page-link" asp-route-page="@i" asp-route-keyword="@keyword">@i</a>
                </li>
            }
            <li class="page-item @(page == totalPages ? "disabled" : "")">
                <a class="page-link" asp-route-page="@(page + 1)" asp-route-keyword="@keyword">»</a>
            </li>
        </ul>
    </nav>
}
