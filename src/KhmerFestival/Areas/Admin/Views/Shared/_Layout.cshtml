@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    string Active(string ctrl) =>
        string.Equals((string?)ViewContext.RouteData.Values["controller"] ?? "", ctrl, StringComparison.OrdinalIgnoreCase) ? "active" : "";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin - KhmerFestival</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <style>
        body { background:#f7f8fb; }
        .admin-sidebar { width:240px; min-height:100vh; }
        .admin-sidebar .nav-link { border-radius:.5rem; }
        .admin-sidebar .nav-link.active { background:#0d6efd; color:#fff; }
    </style>
</head>
<body>
    <div class="d-flex">
        <aside class="admin-sidebar bg-white shadow-sm p-3">
            <a class="navbar-brand fw-bold d-block mb-3" asp-area="Admin" asp-controller="Home" asp-action="Index">
                Admin
            </a>
            <nav class="nav flex-column gap-1">
                <a class="nav-link @Active("Home")" asp-area="Admin" asp-controller="Home" asp-action="Index">
                    Trang chính
                </a>
                <a class="nav-link @Active("Posts")" asp-area="Admin" asp-controller="Posts" asp-action="Index">
                    Bài viết
                </a>
                <a class="nav-link @Active("Users")" asp-area="Admin" asp-controller="Users" asp-action="Index">
                    Người dùng
                </a>
            </nav>
        </aside>

        <main class="flex-grow-1">
            <div class="bg-white border-bottom px-4 py-2 d-flex justify-content-between align-items-center">
                <div class="fw-semibold">@ViewData["Title"]</div>
                <div class="d-flex align-items-center gap-3">
                    <a class="text-decoration-none" asp-area="" asp-controller="Posts" asp-action="Index">⟵ Về trang công khai</a>
                    <span class="text-muted"><@User.Identity?.Name</span>
                    <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="m-0">
                        @Html.AntiForgeryToken()
                        <button class="btn btn-sm btn-outline-danger">Đăng xuất</button>
                    </form>
                </div>
            </div>
            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
