@model IEnumerable<KhmerFestival.Areas.Admin.Controllers.UsersController.UserRow>
@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="fw-bold">Quản lý người dùng</h4>
    <a asp-area="Admin" asp-controller="Users" asp-action="Create" class="btn btn-success">
        Thêm người dùng
    </a>
</div>

@if (TempData["Ok"] is string ok && !string.IsNullOrEmpty(ok))
{
    <div class="alert alert-success">@ok</div>
}
@if (TempData["Err"] is string err && !string.IsNullOrEmpty(err))
{
    <div class="alert alert-danger">@err</div>
}

<div class="card border-0 shadow-sm">
    <div class="card-body table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Email</th>
                    <th>Tên hiển thị</th>
                    <th>Vai trò</th>
                    <th style="width:260px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.Email</td>

                        <td>@(string.IsNullOrWhiteSpace(u.DisplayName) ? "-" : u.DisplayName)</td>

                        <!-- TRÁNH if/else block trong td: dùng biểu thức 1 dòng -->
                        <td>@((u.Roles != null && u.Roles.Count > 0) ? string.Join(", ", u.Roles) : "User")</td>

                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary me-1"
                               asp-area="Admin" asp-controller="Users" asp-action="ResetPassword" asp-route-id="@u.Id">
                                Đặt lại mật khẩu
                            </a>

                            <form asp-area="Admin" asp-controller="Users" asp-action="ToggleAdmin"
                                  method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@u.Id" />
                                @if (u.Roles != null && u.Roles.Contains("Admin"))
                                {
                                    <button class="btn btn-sm btn-warning me-1">Gỡ Admin</button>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-primary me-1">Cấp Admin</button>
                                }
                            </form>

                            <form asp-area="Admin" asp-controller="Users" asp-action="Delete"
                                  method="post" class="d-inline"
                                  onsubmit="return confirm('Xoá người dùng này?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@u.Id" />
                                <button class="btn btn-sm btn-danger">Xoá</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/js/all.min.js"></script>
}
