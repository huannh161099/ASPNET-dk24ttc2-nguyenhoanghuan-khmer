<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KhmerFestival</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KhmerFestival.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/a2e0e9f6e0.js" crossorigin="anonymous"></script>

    <style>
        body {
            background-color: #f8f9fa;
            font-family: "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        }

        .navbar {
            background: linear-gradient(90deg, #ffffff 0%, #f1f3f5 100%);
        }

        .navbar-brand {
            font-weight: 700;
            color: #0066cc !important;
            letter-spacing: 0.5px;
        }

        .nav-link {
            color: #333 !important;
            font-weight: 500;
            transition: color 0.2s ease;
        }

            .nav-link:hover {
                color: #0d6efd !important;
            }

        footer {
            background-color: #fff;
        }
    </style>
</head>

<body>
    
    <header class="shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Posts" asp-action="Index">
                    KhmerFestival
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Posts" asp-action="Index">
                                Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                Giới thiệu
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                           
                            <li class="nav-item dropdown me-2">
                                <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    @User.Identity!.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
                                    <li>
                                        <a class="dropdown-item"
                                           asp-area="Identity"
                                           asp-page="/Account/Manage/Index">
                                            Thông tin tài khoản
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item"
                                           asp-area="Identity"
                                           asp-page="/Account/Manage/ChangePassword">
                                            Đổi mật khẩu
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item"
                                           asp-area="Identity"
                                           asp-page="/Account/Manage/Email">
                                            Đổi email
                                        </a>
                                    </li>
                                </ul> 
                            </li>

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item me-2">
                                    <a class="btn btn-sm btn-outline-primary" asp-area="Admin" asp-controller="Home" asp-action="Index">
                                      Quản trị
                                    </a>
                                </li>
                            }

                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        Đăng xuất
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-sm btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">
                                    Đăng nhập
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-sm btn-primary text-white" asp-area="Identity" asp-page="/Account/Register">
                                    Đăng ký
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    
    <main class="container my-4">
        @RenderBody()
    </main>

    
    <footer class="border-top text-muted py-3 mt-4">
        <div class="container text-center small">
            &copy; 2025 - <strong>KhmerFestival</strong> |
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Chính sách bảo mật</a>
        </div>
    </footer>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
